<PropertyList>

 <name>787 Throttle Panel</name>
 <background>Aircraft/787/Panels/transparent-bg.rgb</background>
 <w>256</w>
 <h>512</h>

<instruments>
   
  <instrument include="radiostack.xml">
    <name>Allied Signal Radio</name>
    <x>140</x>
    <y>245</y>
    <w>80</w>
    <h>35</h>
  </instrument>

<instrument>
  <name>panel hotspots</name>
  <x>128</x>
  <y>256</y>
  <w>256</w>
  <h>512</h>
  <w-base>256</w-base>
  <h-base>512</h-base>

 <actions> 

   <!--             Throttles              -->
   <action>
     <name>Increase LH throttle</name>
     <button>0</button>
     <x>0</x>
     <y>105</y>
     <w>25</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[0]/throttle</property>
       <step>.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>
   
   <action>
     <name>Increase RH throttle</name>
     <button>0</button>
     <x>25</x>
     <y>105</y>
     <w>25</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[1]/throttle</property>
       <step>.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
x     </binding>
   </action>
   
   <action>
     <name>Increase both throttles</name>
     <button>0</button>
     <x>0</x>
     <y>125</y>
     <w>50</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[0]/throttle</property>
       <step>.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[1]/throttle</property>
       <step>.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>
   
   
   <action>
     <name>reduce LH throttle</name>
     <button>0</button>
     <x>0</x>
     <y>70</y>
     <w>25</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[0]/throttle</property>
       <step>-0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>
   
   <action>
     <name>reduce RH throttle</name>
     <button>0</button>
     <x>25</x>
     <y>70</y>
     <w>25</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[1]/throttle</property>
       <step>-0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>
   
   <action>
     <name>reduce both throttles</name>
     <button>0</button>
     <x>0</x>
     <y>50</y>
     <w>50</w>
     <h>20</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[0]/throttle</property>
       <step>-0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
     <binding>
       <command>property-adjust</command>
       <property>/controls/engines/engine[1]/throttle</property>
       <step>-0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Toggle Thrust Reversers</name>
     <button>0</button>
     <x>0</x>
     <y>90</y>
     <w>50</w>
     <h>15</h>
     <binding>
       <command>nasal</command>
       <script>reversethrust.togglereverser()</script>
     </binding>
   </action>

   <action>
     <name>step flap down</name>
     <button>0</button>
     <x>70</x>
     <y>45</y>
     <w>20</w>
     <h>20</h>
     <binding>
       <command>nasal</command>
       <script>controls.flapsDown(1)</script>
     </binding>
   </action>

   <action>
     <name>step flap up</name>
     <button>0</button>
     <x>70</x>
     <y>125</y>
     <w>20</w>
     <h>20</h>
     <binding>
       <command>nasal</command>
       <script>controls.flapsDown(-1)</script>
     </binding>
   </action>

   <action>
     <name>Engage Speedbrake</name>
     <button>0</button>
     <x>-40</x>
     <y>45</y>
     <w>16</w>
     <h>16</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/speedbrake</property>
       <step>1</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Disengage Speedbrake</name>
     <button>0</button>
     <x>-40</x>
     <y>125</y>
     <w>16</w>
     <h>16</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/speedbrake</property>
       <step>-1</step>
       <min>0</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Up</name>
     <button>0</button>
     <x>-75</x>
     <y>45</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>-0.1</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Down</name>
     <button>0</button>
     <x>-75</x>
     <y>125</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>0.1</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Up</name>
     <button>0</button>
     <x>-75</x>
     <y>60</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>-0.01</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Down</name>
     <button>0</button>
     <x>-75</x>
     <y>110</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>0.01</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Up</name>
     <button>0</button>
     <x>-75</x>
     <y>75</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>-0.001</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Pitch Trim Down</name>
     <button>0</button>
     <x>-75</x>
     <y>95</y>
     <w>16</w>
     <h>15</h>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>0.001</step>
       <min>-1</min>
       <max>1</max>
       <wrap>false</wrap>
     </binding>
   </action>

   <action>
     <name>Toggle Parking Brake</name>
     <button>0</button>
     <x>-125</x>
     <y>50</y>
     <w>16</w>
     <h>16</h>
     <binding>
       <command>property-toggle</command>
       <property>/controls/gear/brake-parking</property>
     </binding>
   </action>



</actions>

</instrument>

</instruments>

</PropertyList>
