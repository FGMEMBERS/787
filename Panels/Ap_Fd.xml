<!-- VNAV     MODES -->

 <action>
    <name>VS Hold Toggle </name>
    <button>0</button>
    <x>23</x>
    <y>-26</y>
    <w>12</w>
    <h>12</h>
    <binding>
    <command>nasal</command>
