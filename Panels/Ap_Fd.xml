<PropertyList>
 <name>Autopilot/FlightDirector</name>
 <w-base>524</w-base>
 <h-base>64</h-base>

 <layers>
 </layers>

 <actions>
<!--
  <action>
    <name>bezel outline</name>
    <button>0</button>
    <x>-262</x>
    <y>-32</y>
    <w>524</w>
    <h>64</h>
    <binding>
