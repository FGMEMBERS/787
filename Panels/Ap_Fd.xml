-->

  <action>
    <name>AP on</name>
    <button>0</button>
    <x>-167</x>
    <y>5</y>
    <w>12</w>
    <h>12</h>
    <binding>
    <command>property-toggle</command>
    <property>/instrumentation/flightdirector/autopilot-on</property>
    <value>1.0</value>
    </binding>
  </action>

  <action>
    <name>FD Toggle</name>
    <button>0</button>
    <x>-164</x>
    <y>-15</y>
    <w>8</w>
    <h>8</h>
    <binding>
    <command>property-toggle</command>
     <property>/instrumentation/flightdirector/fd-on</property>
    </binding>
  </action>

  <action>
    <name>AP off</name>
    <button>0</button>
    <x>-74</x>
    <y>-27</y>
    <w>26</w>
    <h>10</h>
    <binding>
    <command>property-assign</command>
    <property>/instrumentation/flightdirector/autopilot-on</property>
    <value>0.0</value>
    </binding>
  </action>


  <action>
