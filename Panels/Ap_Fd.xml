    <y>-23</y>
    <w>12</w>
    <h>12</h>
    <binding>
    <command>property-adjust</command>
    <property>/autopilot/settings/vertical-speed-fpm</property>
    <step>100.0</step>
	<min>-99000</min>
    <max>99000</max>
    <wrap>false</wrap>
    </binding>
  </action>

  <action>
    <name>VS down 100</name>
    <button>0</button>
    <x>1</x>
    <y>-11</y>
    <w>12</w>
    <h>12</h>
    <binding>
