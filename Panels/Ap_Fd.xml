 <!--     LNAV MODES        -->


  <action>
    <name>Heading Toggle</name>
    <button>0</button>
    <x>-43</x>
    <y>-26</y>
    <w>12</w>
    <h>12</h>
    <binding>
    <command>nasal</command>
    <script>
    if(getprop("/instrumentation/flightdirector/lnav") != 1){
    setprop("/instrumentation/flightdirector/lnav",1);}else{
    setprop("/instrumentation/flightdirector/lnav",0);}
    </script>
    </binding>
  </action>

