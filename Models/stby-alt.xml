<!--
777-200 Standby Altimeter 
-->

<PropertyList>
 <path>stby-alt.ac</path>

 <animation>
   <type>select</type>
   <condition>
   <equals>
    <property>sim/current-view/view-number</property>
    <value>0</value>
   </equals>
  </condition>
 </animation>

  <animation>
  <type>material</type>
  <object-name>StbyAlt</object-name>
  <emission>
    <red>0.3</red>
    <green>0.25</green>
    <blue>0.2</blue>
    <factor-prop>/controls/switches/map-lights</factor-prop>	
  </emission>
</animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt10000</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.00001</factor>
   <step>10000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt1000</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.0001</factor>
   <step>1000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt100</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.001</factor>
   <step>100</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt10</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>kpa1000</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.0001</factor>
   <step>1000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>kpa100</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.001</factor>
   <step>100</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>kpa10</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>kpa1</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>in1000</object-name>
   <property>/instrumentation/efis/inhg</property>
   <factor>0.0001</factor>
   <step>1000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>in100</object-name>
   <property>/instrumentation/efis/inhg</property>
   <factor>0.001</factor>
   <step>100</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>in10</object-name>
   <property>/instrumentation/efis/inhg</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>in1</object-name>
   <property>/instrumentation/efis/inhg</property>
   <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>rotate</type>
   <object-name>StbyAltneedle</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.36</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0</y-m>
   <z-m>0.001</z-m>
  </center>
   <axis>
     <x>-1</x>
     <y>0</y>
     <z>0</z>
   </axis>
 </animation>

</PropertyList>
